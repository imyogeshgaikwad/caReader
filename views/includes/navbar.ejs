<style>
  /* Navbar Theme */
  .navbar {
    background: #ffffff;
    padding: 0.7rem 1rem;
  }

  .navbar-brand {
    font-size: 1.4rem;
    letter-spacing: 1px;
  }

  /* Main Links */
  .navbar-nav .nav-link {
    font-weight: 500;
    margin: 0 0.4rem;
    display: flex;
    align-items: center;
    gap: 0.4rem;
    transition: 0.3s ease;
  }

  .navbar-nav .nav-link:hover {
    color: #7600d9;
  }

  /* Search Bar */
  .search-input {
    border-radius: 25px;
    padding-left: 1rem;
    border: 1px solid #ccc;
    transition: 0.3s;
  }

  .search-input:focus {
    outline: none;
    border-color: #7600d9;
    box-shadow: 0 0 8px rgba(118, 0, 217, 0.2);
  }

  .btn-search {
    background: #7600d9;
    color: #fff;
    border-radius: 25px;
    padding: 0.45rem 1.2rem;
    font-weight: 500;
    transition: 0.3s ease;
    display: flex;
    align-items: center;
    gap: 0.4rem;
  }

  .btn-search:hover {
    background: #5a00a8;
    color: #fff;
  }

  .navbar-toggler {
    border: none;
  }

  .navbar-toggler:focus {
    box-shadow: none;
  }
</style>

<nav class="navbar navbar-expand-lg sticky-top shadow-sm">
  <div class="container-fluid">
    
    <!-- Brand -->
    <a class="navbar-brand fw-bold d-flex align-items-center" href="/listings">
      <i class="fa-solid fa-car text-danger"></i>
      <span class="ms-2">CAREADER</span>
    </a>

    <!-- Hamburger -->
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNav"
      aria-controls="navbarNav"
      aria-expanded="false"
      aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Collapsible Content -->
    <div class="collapse navbar-collapse" id="navbarNav">

      <!-- Left Navigation -->
      <div class="navbar-nav me-auto">
        <a class="nav-link" href="/listings">
          <i class="fa-solid fa-list"></i> Explore
        </a>
      </div>

      <!-- Search Bar -->
      <form class="d-flex me-3" role="search">
        <input class="form-control search-input" type="search" placeholder="Search Your Car" />
        <button class="btn btn-search ms-2" type="submit">
          <i class="fa-solid fa-magnifying-glass"></i>
          Search
        </button>
      </form>

      <!-- Right Navigation -->
      <div class="navbar-nav">
        <a class="nav-link" href="/listings/new">
          <i class="fa-solid fa-plus-circle"></i> Add Your Car
        </a>

        <% if (!currUser) { %>
          <a class="nav-link" href="/signup">
            <i class="fa-solid fa-user-plus"></i> Sign Up
          </a>
          <a class="nav-link" href="/login">
            <i class="fa-solid fa-right-to-bracket"></i> Log In
          </a>
        <% } else { %>
          <a class="nav-link" href="/logout">
            <i class="fa-solid fa-right-from-bracket"></i> Logout
          </a>
        <% } %>
      </div>

    </div>
  </div>
</nav>
