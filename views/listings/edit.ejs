<% layout("/layouts/boilerplate") %>

<div class="container mt-5 mb-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <!-- Card Container -->
      <div class="card shadow-sm">
        <div class="card-header bg-warning">
          <h4 class="mb-0">
            <i class="fa-solid fa-pen-to-square"></i> Update Car Details
          </h4>
        </div>
        
        <div class="card-body">
          <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" class="needs-validation" novalidate>
            
            <!-- Title -->
            <div class="mb-3">
              <label for="title" class="form-label fw-bold">
                Title <span class="text-danger">*</span>
              </label>
              <input 
                id="title" 
                name="listing[title]" 
                class="form-control" 
                type="text" 
                value="<%= listing.title %>" 
                placeholder="e.g., Tesla Model 3"
                required
                minlength="3"
                maxlength="100"
              >
              <div class="invalid-feedback">
                Please enter a title (3-100 characters).
              </div>
            </div>

            <!-- Description -->
            <div class="mb-3">
              <label for="description" class="form-label fw-bold">
                Description <span class="text-danger">*</span>
              </label>
              <textarea 
                id="description" 
                name="listing[description]" 
                class="form-control" 
                rows="4"
                placeholder="Describe the car's features, condition, etc."
                required
                minlength="10"
              ><%= listing.description %></textarea>
              <div class="invalid-feedback">
                Please provide a description (at least 10 characters).
              </div>
              <div class="form-text">
                <span id="charCount">0</span> characters
              </div>
            </div>

            <!-- Image URL with Preview -->
            <div class="mb-3">
              <label for="image" class="form-label fw-bold">
                Image URL
              </label>
              <input 
                id="image" 
                name="listing[image]" 
                class="form-control" 
                type="url" 
                value="<%= listing.image %>"
                placeholder="https://example.com/car-image.jpg"
              >
              <div class="form-text">
                Optional - Leave blank for default image
              </div>
              
              <!-- Image Preview -->
              <div class="mt-3" id="previewContainer"></div>
                <label class="form-label fw-bold small text-muted">Preview:</label>
                <div class="position-relative d-inline-flex">
                  <img 
                    id="imagePreview" 
                    src="<%= listing.image %>" 
                    alt="Preview" 
                    class="img-thumbnail d-block" 
                    style="max-height: 200px; max-width: 100%;"
                  >
                  <span 
                    id="imageError" 
                    class="badge bg-danger position-absolute top-0 start-50 translate-middle-x mt-2" 
                    style="display: none;"
                  >
                    Invalid Image URL
                  </span>
                </div>
              </div>
            </div>

            <!-- Price -->
            <div class="mb-3">
              <label for="price" class="form-label fw-bold">
                Price (€) <span class="text-danger">*</span>
              </label>
              <div class="input-group">
                <span class="input-group-text">€</span>
                <input 
                  id="price" 
                  name="listing[price]" 
                  class="form-control" 
                  type="number" 
                  value="<%= listing.price %>" 
                  placeholder="45000"
                  min="0"
                  step="1"
                  required
                >
              </div>
              <div class="invalid-feedback">
                Please enter a valid price (minimum €0).
              </div>
              <div class="form-text" id="priceFormatted"></div>
            </div>

            <!-- Location & Country (Side by Side) -->
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="location" class="form-label fw-bold">
                  Location <span class="text-danger">*</span>
                </label>
                <input 
                  id="location" 
                  name="listing[location]" 
                  class="form-control" 
                  type="text" 
                  value="<%= listing.location %>" 
                  placeholder="e.g., Dublin"
                  required
                >
                <div class="invalid-feedback">
                  Please enter a location.
                </div>
              </div>

              <div class="col-md-6 mb-3">
                <label for="country" class="form-label fw-bold">
                  Country <span class="text-danger">*</span>
                </label>
                <input 
                  id="country" 
                  name="listing[country]" 
                  class="form-control" 
                  type="text" 
                  value="<%= listing.country %>" 
                  placeholder="e.g., Ireland"
                  required
                >
                <div class="invalid-feedback">
                  Please enter a country.
                </div>
              </div>
            </div>

            <!-- Last Updated Info -->
            <% if (listing.updatedAt) { %>
              <div class="alert alert-info small mb-3">
                <i class="fa-solid fa-clock"></i>
                Last updated: <%= new Date(listing.updatedAt).toLocaleString('en-IE', { 
                  year: 'numeric', 
                  month: 'long', 
                  day: 'numeric',
                  hour: '2-digit',
                  minute: '2-digit'
                }) %>
              </div>
            <% } %>

            <!-- Submit Buttons -->
            <div class="d-flex gap-2">
              <button type="submit" class="btn btn-warning flex-fill">
                <i class="fa-solid fa-save"></i> Update Car
              </button>
              <a href="/listings/<%= listing._id %>" class="btn btn-outline-secondary flex-fill">
                <i class="fa-solid fa-times"></i> Cancel
              </a>
            </div>

          </form>
        </div>
      </div>

      <!-- Delete Section -->
      <div class="card shadow-sm mt-3 border-danger">
        <div class="card-body">
          <h5 class="card-title text-danger mb-3">
            <i class="fa-solid fa-triangle-exclamation"></i> Danger Zone
          </h5>
          <p class="card-text text-muted mb-3">
            Once you delete this listing, it cannot be recovered. All information will be permanently removed.
          </p>
          <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" id="deleteForm">
            <button 
              type="button"
              class="btn btn-danger" 
              data-bs-toggle="modal" 
              data-bs-target="#deleteModal"
            >
              <i class="fa-solid fa-trash"></i> Delete Listing
            </button>
          </form>
        </div>
      </div>

    </div>
  </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header bg-danger text-white">
        <h5 class="modal-title" id="deleteModalLabel">
          <i class="fa-solid fa-triangle-exclamation"></i> Confirm Deletion
        </h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p class="mb-3">Are you absolutely sure you want to delete this listing?</p>
        <div class="alert alert-warning">
          <strong><%= listing.title %></strong><br>
          <small class="text-muted">This action cannot be undone!</small>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          <i class="fa-solid fa-times"></i> Cancel
        </button>
        <button type="button" class="btn btn-danger" id="confirmDelete">
          <i class="fa-solid fa-trash"></i> Yes, Delete It
        </button>
      </div>
    </div>
  </div>
</div>
<script src="/js/script.js"></script>
