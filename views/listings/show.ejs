<% layout("/layouts/boilerplate") %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <!-- Main Card -->
      <div class="card shadow-sm">
        <img 
          src="<%= listing.image %>" 
          class="card-img-top" 
          alt="<%= listing.title %>"
          style="height: 400px; object-fit: cover;"
        >
        <div class="card-body">
          <h3 class="card-title mb-3"><%= listing.title %></h3>
          
          <p class="card-text text-muted mb-4">
            <%= listing.description %>
          </p>
          
          <hr>
          
          <!-- Details Section -->
          <div class="row mb-4">
            <div class="col-6">
              <p class="mb-2">
                <i class="bi bi-tag-fill text-primary"></i>
                <strong> Price:</strong><br>
                <span class="fs-4 text-success">
                  <%= listing.price.toLocaleString('de-DE', { style: 'currency', currency: 'EUR' }) %>
                </span>
              </p>
            </div>
            <div class="col-6">
              <p class="mb-2">
                <i class="bi bi-geo-alt-fill text-danger"></i>
                <strong> Location:</strong><br>
                <%= listing.location %>, <%= listing.country %>
              </p>
            </div>
          </div>
          
          <hr>
          
          <!-- Action Buttons -->
          <div class="d-flex gap-2 mb-2">
            <a 
              href="/listings" 
              class="btn btn-outline-secondary flex-fill"
            >
              <i class="bi bi-arrow-left"></i> Back to Listings
            </a>
            <a 
              href="/listings/<%= listing._id %>/edit" 
              class="btn btn-warning flex-fill"
            >
              <i class="bi bi-pencil"></i> Edit
            </a>
          </div>
          
          <!-- Delete Form -->
          <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
            <button class="btn btn-danger w-100" onclick="return confirm('Are you sure you want to delete this listing?')">
              <i class="bi bi-trash"></i> Delete Listing
            </button>
          </form>
        </div>
      </div>
      
      <!-- Timestamps (if you want to show them) -->
      <div class="text-muted text-center mt-3 small">
        <% if (listing.createdAt) { %>
          Posted on <%= new Date(listing.createdAt).toLocaleDateString('en-IE', { 
            year: 'numeric', 
            month: 'long', 
            day: 'numeric' 
          }) %>
        <% } %>
      </div>
    </div>
  </div>
</div>