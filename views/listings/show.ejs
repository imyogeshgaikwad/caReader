<% layout("/layouts/boilerplate") %>
<script>
  const mapToken = "<%= process.env.MAP_TOKEN %> "
</script>
<div class="row container mt-4">

<div class="container mt-4">
  <div class="text-center mb-4">
    <h1 class="display-5 fw-bold"><%= listing.title %></h1>
    <p class="text-muted"><%= listing.location %>, <%= listing.country %></p>
  </div>

  <div class="row justify-content-center ">
    <div class="col-lg-8 col-md-10">
  
  <div class="col-md-12 container mt-4">
    <div class="card mb-4">
      <img src="<%= listing.image.url %>" class="card-img-top " alt="<%= listing.title %>">
      <div class="card-body">
        <div class="d-flex align-items-center mb-3">
          <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center me-2" style="width: 40px; height: 40px;">
            <%= listing.owner?.username?.charAt(0).toUpperCase() || "U" %>
          </div>
          <div>
            <small class="text-muted">Listed By</small>
            <div><strong><%= listing.owner.username %></strong></div>
          </div>
        </div>
        
        <h5 class="card-title"><%= listing.title %></h5>
        <p class="card-text"><%= listing.description %></p>
        
        <div class="mb-2">
          <strong>Price:</strong> <%= listing.price.toLocaleString('de-DE', { style: 'currency', currency: 'EUR' }) %>
        </div>
        <div class="mb-3">
          <strong>Location:</strong> <%= listing.location %>, <%= listing.country %>
        </div>
        
        <% if (currUser && listing.owner && currUser.id === listing.owner._id.toString()) { %>
        <div class="d-flex gap-2">
          <a href="/listings" class="btn btn-secondary">Back to Listings</a>
          <a href="/listings/<%= listing._id %>/edit" class="btn btn-warning">Edit</a>
          <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" class="d-inline">
            <button class="btn btn-danger">Delete</button>
          </form>
        </div>
        <% } %>
        
        <% if (listing.createdAt) { %>
        <div class="text-muted mt-3">
          <small>Posted on <%= new Date(listing.createdAt).toLocaleDateString('en-IE', { year: 'numeric', month: 'long', day: 'numeric' }) %></small>
        </div>
        <% } %>
      </div>
    </div>
    
    <!-- Reviews Section -->
    <% if (listing.reviews && listing.reviews.length > 0) { %>
    <div class="card mb-4">
      <div class="card-body">
        <h5 class="card-title mb-4">All Reviews (<%= listing.reviews.length %>)</h5>
        
        <% for(let review of listing.reviews) { %>
        <div class="review-item mb-4 pb-4 border-bottom">
          <div class="d-flex justify-content-between align-items-start mb-2">
            <div>
              <strong>@<%= review.author.username %></strong>
              <div class="my-2">
                <p class="starability-result" data-rating="<%= review.rating %>">
                  Rated: <%= review.rating %> stars
                </p>
              </div>
              <small class="text-muted">
                <%= new Date(review.createdAt).toLocaleDateString('en-IE', { year: 'numeric', month: 'short', day: 'numeric' }) %>
              </small>
            </div>
            <% if(currUser && review.author._id.equals(currUser._id)) { %>
            <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
              <button class="btn btn-sm btn-danger">Delete</button>
            </form>
            <% } %>
          </div>
          <p class="mb-0"><%= review.comment %></p>
        </div>
        <% } %>
      </div>
    </div>
    <% } %>
    
    <!-- Leave a Review Form -->
    <% if(currUser) { %>
    <div class="card">
      <div class="card-body">
        <h5 class="card-title mb-4">Leave a Review</h5>
        <form method="POST" action="/listings/<%= listing._id %>/reviews" novalidate class="needs-validation">
          <div class="mb-3">
            <label class="form-label">Rating *</label>
            <fieldset class="starability-slot">
              <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked aria-label="No rating." />
              <input type="radio" id="first-rate1" name="review[rating]" value="1" />
              <label for="first-rate1" title="Terrible">1 star</label>
              <input type="radio" id="first-rate2" name="review[rating]" value="2" />
              <label for="first-rate2" title="Not good">2 stars</label>
              <input type="radio" id="first-rate3" name="review[rating]" value="3" />
              <label for="first-rate3" title="Average">3 stars</label>
              <input type="radio" id="first-rate4" name="review[rating]" value="4" />
              <label for="first-rate4" title="Very good">4 stars</label>
              <input type="radio" id="first-rate5" name="review[rating]" value="5" />
              <label for="first-rate5" title="Amazing">5 stars</label>
              <span class="starability-focus-ring"></span>
            </fieldset>
          </div>
          
          <div class="mb-3">
            <label for="comment" class="form-label">Comment *</label>
            <textarea class="form-control" id="comment" name="review[comment]" rows="4" required></textarea>
            <div class="invalid-feedback">Please add some comments for your review.</div>
          </div>
          
          <button type="submit" class="btn btn-primary">Submit Review</button>
        </form>
      </div>
    </div>
    <% } %>

<h3 class="mt-3 mb-3 text-dark fw-bold">Where you will be</h3>

<div class="map-wrapper mb-5">
  <div id="map"></div>
</div>

    
  </div>



</div>






<script>
  // Bootstrap form validation
  (function() {
    'use strict';
    const forms = document.querySelectorAll('.needs-validation');
    Array.from(forms).forEach(function(form) {
      form.addEventListener('submit', function(event) {
        if (!form.checkValidity()) {
          event.preventDefault();
          event.stopPropagation();
        }
        form.classList.add('was-validated');
      }, false);
    });
  })();
</script>

<style>
  .review-item:last-child {
    border-bottom: none !important;
    padding-bottom: 0 !important;
  }
</style>

<script src="/js/map.js"></script>