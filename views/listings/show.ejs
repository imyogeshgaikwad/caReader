<% layout("/layouts/boilerplate") %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <!-- Main Card -->
      <div class="card shadow-sm border-0">
        <img 
          src="<%= listing.image %>" 
          class="card-img-top" 
          alt="<%= listing.title %>"
          style="height: 400px; object-fit: cover;"
          
        >
        <div class="card-body p-4">
          <h2 class="card-title mb-3 fw-bold"><%= listing.title %></h2>
          
          <p class="card-text text-muted mb-4 fs-6">


           <!-- Owner Section -->
<div class="d-flex align-items-center mb-3">
  <div 
    class="bg-primary text-white rounded-circle d-flex justify-content-center 
           align-items-center me-3 shadow-sm" 
    style="width: 45px; height: 45px; font-size: 1.1rem; font-weight: 600;"
  >
<%= listing.owner?.username?.charAt(0).toUpperCase() || "U" %>
  </div>

  <div>
    <div class="text-muted small">Listed By</div>
    <div class="fw-semibold fs-5">
      <i class="bi bi-person-circle text-primary me-1"></i>
      <%= listing.owner.username %>
    </div>
  </div>
</div>

<!-- Description -->
<p class="card-text text-muted fs-6">
  <%= listing.description %>
</p>
          
          <hr class="my-4">
          
          <!-- Details Section -->
          <div class="row mb-4">
            <div class="col-md-6 mb-3 mb-md-0">
              <div class="d-flex align-items-start">
                <i class="bi bi-tag-fill text-primary fs-5 me-2 mt-1"></i>
                <div>
                  <strong class="d-block mb-1">Price</strong>
                  <span class="fs-3 text-success fw-bold">
                    <%= listing.price.toLocaleString('de-DE', { style: 'currency', currency: 'EUR' }) %>
                  </span>
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="d-flex align-items-start">
                <i class="bi bi-geo-alt-fill text-danger fs-5 me-2 mt-1"></i>
                <div>
                  <strong class="d-block mb-1">Location</strong>
                  <span class="text-muted">
                    <%= listing.location %>, <%= listing.country %>
                  </span>
                </div>
              </div>
            </div>
          </div>
          
          <hr class="my-4">
          
          <!-- Action Buttons -->
<% if (currUser && listing.owner && currUser.id === listing.owner._id.toString()) { %>

           
          <div class="d-flex flex-column flex-md-row gap-2 mb-3">
            <a 
              href="/listings" 
              class="btn btn-outline-secondary flex-fill"
            >
              <i class="bi bi-arrow-left"></i> Back to Listings
            </a>
            <a 
              href="/listings/<%= listing._id %>/edit" 
              class="btn btn-warning flex-fill text-white"
            >
            

              <i class="bi bi-pencil"></i> Edit
            </a>
            <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" class="flex-fill m-0">
              <button 
                class="btn btn-danger w-100" 
                onclick="return confirm('Are you sure you want to delete this listing?')"
              >
                <i class="bi bi-trash"></i> Delete
              </button>
              </form>
              
            
          </div>
          <%}%>
          
          <!-- Timestamps -->
          <% if (listing.createdAt) { %>
            <div class="text-muted text-center small">
              Posted on <%= new Date(listing.createdAt).toLocaleDateString('en-IE', { 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric' 
              }) %>
            </div>
          <% } %>
        </div>
      </div>

      <!-- Existing Reviews Display -->
      <% if (listing.reviews && listing.reviews.length > 0) { %>
        <div class="card shadow-sm border-0 mt-4">
          <div class="card-body p-4">
            <h4 class="mb-4 fw-bold">
              <i class="bi bi-chat-left-quote text-primary"></i> 
              All Reviews (<%= listing.reviews.length %>)
            </h4>
            <div class="row">
              <% for(let review of listing.reviews) { %>
                <div class="col-12 mb-3">
                  <div class="card border">
                    <div class="card-body">
                      <div class="d-flex justify-content-between align-items-start mb-2">
                        <div class="d-flex align-items-center gap-2">
                          <div>
                            <% for(let i = 0; i < 5; i++) { %>
                              <i class="bi bi-star<%= i < review.rating ? '-fill text-warning' : ' text-muted' %>"></i>
                            <% } %>
                          </div>
                          <span class="badge bg-secondary"><%= review.rating %>/5</span>
                        </div>
                        <small class="text-muted">
                          <i class="bi bi-calendar3"></i>
                          <%= new Date(review.createdAt).toLocaleDateString('en-IE', { 
                            year: 'numeric', 
                            month: 'short', 
                            day: 'numeric' 
                          }) %>
                        </small>
                      </div>
                      <p class="mb-2 mt-3"><%= review.comment %></p>
                      
                      <!-- Delete Review Form -->
                      <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" class="d-inline">
                        <button class="btn btn-sm btn-outline-danger mt-2">
                          <i class="bi bi-trash3"></i> Delete
                        </button>
                      </form>
                    </div>
                  </div>
                </div>
              <% } %>
            </div>
          </div>
        </div>
      <% } %>

      <!-- Leave a Review Section -->
      <div class="card shadow-sm border-0 mt-4">
        <div class="card-body p-4">
          <h4 class="mb-4 fw-bold">
            <i class="bi bi-pencil-square text-success"></i> 
            Leave a Review
          </h4>
          <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">
            <div class="mb-4">
              <label for="rating" class="form-label fw-semibold">
                Rating <span class="text-danger">*</span>
              </label>
              <div class="d-flex align-items-center gap-3">
                <input 
                  type="range" 
                  class="form-range" 
                  min="1" 
                  max="5" 
                  id="rating" 
                  name="review[rating]"
                  value="3"
                  required
                >
                <span id="ratingValue" class="badge bg-primary fs-5" style="min-width: 50px;">
                  <i class="bi bi-star-fill"></i> 3
                </span>
              </div>
              <div id="starDisplay" class="mt-2">
                <i class="bi bi-star-fill text-warning"></i>
                <i class="bi bi-star-fill text-warning"></i>
                <i class="bi bi-star-fill text-warning"></i>
                <i class="bi bi-star text-muted"></i>
                <i class="bi bi-star text-muted"></i>
              </div>
              <div class="form-text">Drag to select your rating (1-5 stars)</div>
            </div>

            <div class="mb-4">
              <label for="comment" class="form-label fw-semibold">
                Comment <span class="text-danger">*</span>
              </label>
              <textarea 
                name="review[comment]" 
                id="comment" 
                class="form-control" 
                rows="5"
                placeholder="Share your experience with this listing..."
                required
              ></textarea>
              <div class="invalid-feedback">
                Please add some comments for your review.
              </div>
            </div>

            <button type="submit" class="btn btn-success btn-lg w-100">
              <i class="bi bi-send-fill"></i> Submit Review
            </button>
          </form>
        </div>
      </div>

    </div>
  </div>
</div>

<!-- Rating Range Script -->
<script>
  // Bootstrap form validation
  (function() {
    'use strict';
    const forms = document.querySelectorAll('.needs-validation');
    Array.from(forms).forEach(function(form) {
      form.addEventListener('submit', function(event) {
        if (!form.checkValidity()) {
          event.preventDefault();
          event.stopPropagation();
        }
        form.classList.add('was-validated');
      }, false);
    });
  })();

  // Rating display update
  const ratingInput = document.getElementById('rating');
  const ratingValue = document.getElementById('ratingValue');
  const starDisplay = document.getElementById('starDisplay');
  
  function updateRatingDisplay(value) {
    ratingValue.innerHTML = `<i class="bi bi-star-fill"></i> ${value}`;
    
    // Update star display
    let starsHTML = '';
    for (let i = 1; i <= 5; i++) {
      if (i <= value) {
        starsHTML += '<i class="bi bi-star-fill text-warning"></i> ';
      } else {
        starsHTML += '<i class="bi bi-star text-muted"></i> ';
      }
    }
    starDisplay.innerHTML = starsHTML;
  }
  
  ratingInput.addEventListener('input', function() {
    updateRatingDisplay(this.value);
  });
</script>